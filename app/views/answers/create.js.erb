$('.answer-errors').html('<%= render 'shared/errors', resource: @answer%>');

<% if @answer.persisted? %>
  $('.answers').append('<%= j render @answer %>');
  $('.new_answer #answer_body').val('');
  $("#answer_files").val('');
  $('.container').prepend('<div class="alert alert-info">Your answer successfully created.</div>');
<% end %>
